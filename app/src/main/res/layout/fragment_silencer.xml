<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/silencer_title_label"/>
    <EditText
        android:id="@+id/silencer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/silencer_title_hint"/>
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/silencer_details_label"/>
    <Button
        android:id="@+id/silencer_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Wed Nov 14 2018"/>

    <Button
        android:id="@+id/silencer_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="11:56 EST" />
</LinearLayout>